{
    "name": "messenger",
    "private": true,
    "version": "1.0.0",
    "type": "module",
    "scripts": {
        "test": "jest",
        "prepare": "husky install",
        "pre-commit": "run-p check:types check:eslint check:stylelint",
        "check:types": "tsc --noEmit",
        "check:eslint": "eslint . --ext .ts",
        "check:stylelint": "stylelint \"**/*.scss\"",
        "eslint": "eslint 'src/**/*.{js,ts,jsx,tsx}'",
        "stylelint": "stylelint 'src/**/*.{css,scss,sass}'",
        "dev": "npm run check && vite",
        "dev:clean": "vite",
        "start": "npm run check && tsc && vite build && vite preview --port 3000",
        "build": "tsc && vite build"
    },
    "husky": {
        "hooks": {
            "pre-commit": "pre-commit"
        }
    },
    "devDependencies": {
        "@babel/core": "^7.26.0",
        "@babel/eslint-parser": "^7.25.9",
        "@babel/preset-env": "^7.26.0",
        "@babel/preset-typescript": "^7.26.0",
        "@types/jest": "^29.5.14",
        "@types/node": "^22.7.4",
        "@types/uuid": "^10.0.0",
        "@typescript-eslint/eslint-plugin": "^7.0.0",
        "@typescript-eslint/parser": "^7.0.0",
        "babel-jest": "^29.7.0",
        "eslint": "^8.57.1",
        "eslint-config-prettier": "^9.1.0",
        "eslint-config-standard": "^17.1.0",
        "eslint-plugin-import": "^2.31.0",
        "eslint-plugin-node": "^11.1.0",
        "eslint-plugin-prettier": "^5.2.1",
        "eslint-plugin-promise": "^6.6.0",
        "handlebars-jest": "^1.0.0",
        "husky": "^7.0.4",
        "jest": "^29.7.0",
        "jest-environment-jsdom": "^29.7.0",
        "jsdom": "^25.0.1",
        "npm-run-all": "^4.1.5",
        "prettier": "3.3.3",
        "sass-embedded": "^1.80.3",
        "stylelint": "^16.10.0",
        "stylelint-config-standard": "^36.0.1",
        "stylelint-scss": "^6.8.1",
        "ts-jest": "^29.2.5",
        "typescript": "^5.5.3",
        "vite": "^5.4.8",
        "vite-plugin-handlebars": "^2.0.0"
    },
    "dependencies": {
        "handlebars": "^4.7.8",
        "normalize.css": "^8.0.1",
        "uuid": "^10.0.0"
    },
    "engines": {
        "node": ">=20.0.0"
    }
}
